{
    "id": "00fb9c48-ffbd-4788-ae49-5ffa43af4fa1",
    "request": {
        "method": "POST",
        "url": "/soap/request",
        "bodyPatterns": [
            {
                "matchesXPath": "//ns2:getValuation/getValuationRequest",
